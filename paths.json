{
	"source": {
		"all": "./source/**/*.*",
		"lib": [
			"./source/lib/**/*.js",
			"./source/*.js"
		],
		"generators": "./source/spec/cli/fixtures/**/*.*",
		"txt": "./source/lib/**/*.txt",
		"spec": [
			"./source/spec/**/*.js",
			"!./source/spec/stimpak/fixtures/**/*.*"
		]
	},

	"build": {
		"directories": {
			"es5": "./es5",
			"lib": "./es5/lib",
			"spec": "./es5/spec"
		},
		"lib": "./es5/lib/**/*.js",
		"generators": "./es5/spec/cli/fixtures/**/*.*",
		"spec": "./es5/spec/**/*.spec.js",
		"sourceSpec": [
			"./source/spec/**/*.spec.js",
			"!./source/spec/fixtures/**/*.spec.js"
		]
	}
}
