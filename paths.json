{
	"source": {
		"all": [
			"./source/lib/**/*.js",
			"./source/lib/*.js"
		],
		"allSpec": "./source/spec/**/*.spec.js",
		"library": [
			"./source/lib/**/*.js",
			"!./source/lib/cli/*",
			"./source/*.js"
		],
		"cli": [
			"./source/lib/**/*.js",
			"!./source/lib/stimpak/*",
			"!./source/lib/source/*",
			"!./source/lib/index.js"
		],
		"generators": "./source/spec/cli/fixtures/**/*.*",
		"librarySpec": [
			"./source/spec/**/*.spec.js",
			"!./source/spec/cli/**/*"
		],
		"cliSpec": [
			"./source/spec/cli/*.spec.js"
		]
	},

	"build": {
		"directories": {
			"es5": "./es5",
			"lib": "./es5/lib",
			"spec": "./es5/spec"
		},
		"generators": "./es5/spec/cli/fixtures/**/*.*",
		"spec": "./es5/spec/**/*.spec.js",
		"sourceSpec": [
			"./source/spec/**/*.spec.js",
			"!./source/spec/fixtures/**/*.spec.js"
		]
	}
}
